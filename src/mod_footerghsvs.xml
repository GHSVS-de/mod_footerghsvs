<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
	<name>mod_footerghsvs</name>
	<author>G@HService Berlin Neukölln, Volkmar Volli Schlothauer (GHSVS)</author>
	<creationDate>2019-10-07</creationDate>
	<copyright>Copyright (C) 2019, G@HService Berlin Neukölln, Volkmar Volli Schlothauer (GHSVS.de). All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt</license>
	<authorUrl>https://www.ghsvs.de</authorUrl>
	<version>2021.08.26</version>
	<description>MOD_FOOTERGHSVS_XML_DESCRIPTION</description>

	<updateservers><server type="extension" priority="1" name="MOD_FOOTERGHSVS">https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/mod_footerghsvs-update.xml</server></updateservers>

	<files>
		<filename module="mod_footerghsvs">mod_footerghsvs.php</filename>
		<filename>LICENSE.txt</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="advanced">

				<field name="footerstart" type="text" label="Startjahr" default=""
					class="extended-width"/>

				<field name="footertext" type="text" label="Text" default=""
					class="extended-width" filter="safehtml" />

				<field name="footertel" type="text" label="Telefon" filter="safehtml"
					default="" class="extended-width"/>

				<field name="footeremail" type="text"
					label="Email"
					default="" class="extended-width"
					description="NUR Email-Adresse! Wird gecloaked." />

				<field
					name="footerweb"
					type="text"
					label="Web"
					default="" class="extended-width"
					description="Webadresse OHNE https://" />

				<field name="divider" type="text" filter="safehtml"
					label="Trenner" default=" ° " class="extended-width"/>

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"/>
				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"/>
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"/>
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
